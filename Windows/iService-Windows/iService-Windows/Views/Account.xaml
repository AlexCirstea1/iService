<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iService_Windows.Views.Account"
             BackgroundColor="#1e1e1e">
    <StackLayout
        Margin="20,20,20,0">
        <Entry x:Name="UsernameEntry" Placeholder="Username" Margin="0,0,0,10" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" Margin="0,0,0,10"/>
        <Button x:Name="LoginButton" Text="Login" Clicked="LoginButton_Clicked" Margin="0,0,0,10"/>
        <Button x:Name="RegisterButton" Text="Register" Clicked="RegisterButton_Clicked" Margin="0,0,0,10"/>
        <Button x:Name="LogOut" Text="LogOut" Clicked="LogOut_Clicked"  Margin="0,0,0,10"/>
    </StackLayout>
</ContentPage>