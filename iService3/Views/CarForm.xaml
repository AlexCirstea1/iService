<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iService3.Views.CarForm"
             Title="CarForm"
             BackgroundImageSource="background5">
    <VerticalStackLayout
        Margin="30,140,30,340"
        Padding="25"
        BackgroundColor="#1d232b"
        >
        <Entry 
            x:Name ="Manufacturer" 
            Placeholder="Manufacturer" 
            Margin="0,20,0,0"
            FontFamily="coolvetica"
            FontSize="17">
        </Entry>
        <Entry 
            x:Name ="Model" 
            Placeholder="Model" 
            Margin="0,20,0,0"
            FontFamily="coolvetica"
            FontSize="17">
        </Entry>
        <Entry 
            x:Name ="Year" 
            Placeholder="Year" 
            Margin="0,20,0,0" 
            FontFamily="coolvetica"
            FontSize="17">
        </Entry>
        <Button 
                    x:Name="addCarBtn" 
                    Text="ADD" 
                    Margin="0,30,0,0"
                    FontFamily="coolvetica"
                    FontSize="19"
                    TextColor="#1da7c1"
                    BackgroundColor="#111111"
            Clicked="addCarBtn_Clicked">
        </Button>

    </VerticalStackLayout>

</ContentPage>